{
  "name": "@zephyr-ui/spinner",
  "version": "0.1.1-alpha.0",
  "description": "A component used to display loading or indeterminate states in an application",
  "keywords": [
    "spinner"
  ],
  "author": "Greg Ogun <me@gregogun.xyz>",
  "homepage": "https://github.com/zephyr-ui/zephyr-ui#readme",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zephyr-ui/zephyr-ui.git",
    "directory": "packages/spinner"
  },
  "bugs": {
    "url": "https://github.com/zephyr-ui/zephyr-ui/issues"
