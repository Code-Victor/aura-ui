    "@zephyr-ui/visually-hidden": "^0.1.1-alpha.0"
  },
  "devDependencies": {
    "react": "^17.0.2",
    "tsup": "^5.11.7"
  },
  "peerDependencies": {
    "react": "^17.0.2"
